<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Button -->
    <LinearLayout
        android:id="@+id/tgChannelClickble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tgChannelImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tgChannelTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tgChannelSummon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 1"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Second Button -->
    <LinearLayout
        android:id="@+id/tgBotClickble"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/tgBotImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/tgBotTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tgBotSummon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 2"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Third Button -->
    <LinearLayout
        android:id="@+id/payClickable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/payImage"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_coffee" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/payTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/paySummon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 3"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
