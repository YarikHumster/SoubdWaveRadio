<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- First Button -->
    <LinearLayout
        android:id="@+id/button_social1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/button_image_social1"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/button_title_social1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 1"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button_description_social1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 1"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Second Button -->
    <LinearLayout
        android:id="@+id/buttonsocial2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/button_imagesocial2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_tg" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/button_titlesocial2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 2"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button_descriptionsocial2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 2"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

    <!-- Third Button -->
    <LinearLayout
        android:id="@+id/buttonsocial3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="@drawable/div_gallery_item_border"
        android:clickable="true"
        android:focusable="true"
        android:orientation="horizontal"
        android:padding="16dp">

        <ImageView
            android:id="@+id/button_imagesocial3"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_coffee" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:paddingStart="16dp"
            tools:ignore="RtlSymmetry">

            <TextView
                android:id="@+id/button_titlesocial3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Title 3"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/button_descriptionsocial3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Button Description 3"
                android:textSize="12sp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>